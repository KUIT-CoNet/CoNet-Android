<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_group_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/iv_group_item_star"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="8dp"
        android:adjustViewBounds="true"
        android:contentDescription="즐겨찾기 유무"
        android:elevation="3dp"
        android:src="@drawable/icon_star"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/cv_group_item"
        app:layout_constraintTop_toTopOf="@id/cv_group_item" />

    <ImageView
        android:id="@+id/iv_group_item_star_un"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="8dp"
        android:adjustViewBounds="true"
        android:contentDescription="즐겨찾기 유무"
        android:elevation="3dp"
        android:src="@drawable/icon_star_un"
        app:layout_constraintEnd_toEndOf="@id/cv_group_item"
        app:layout_constraintTop_toTopOf="@id/cv_group_item" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_group_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:outlineSpotShadowColor="@color/grayWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_group_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="모임 사진"
            android:elevation="0dp"
            android:src="@drawable/icon_close" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_group_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text=""
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_group_item" />

