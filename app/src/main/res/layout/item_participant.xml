<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grayWhite"
    android:elevation="0dp"
    android:outlineAmbientShadowColor="@color/grayWhite"
    android:outlineSpotShadowColor="@color/grayWhite">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_participant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grayWhite"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/iv_participant_image"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/icon_participant_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_participant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/pretendard"
            android:textColor="@color/texthigh"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_participant_image"
            app:layout_constraintStart_toEndOf="@id/iv_participant_image"
            app:layout_constraintTop_toTopOf="@id/iv_participant_image" />

        <ImageView
            android:id="@+id/iv_minus"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/icon_minus_circle"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/iv_participant_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_participant_image" />

        <ImageView
            android:id="@+id/iv_check"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/icon_check_circle_gray"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/iv_participant_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_participant_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>