<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#4D000000"
    android:id="@+id/group_main_sidebar"
    android:layout_gravity="end"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintRight_toRightOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/grayWhite">
            <ImageView
                android:id="@+id/iv_closeBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="28dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/btn_xclose"/>

            <TextView
                android:id="@+id/tv_side_groupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_bold"
                android:textSize="26sp"
                android:textColor="@color/grayBlack"
                android:text="iOS스터디"
                app:layout_constraintTop_toBottomOf="@id/iv_closeBtn"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="27dp"
                android:layout_marginLeft="18dp"/>

            <ImageView
                android:id="@+id/iv_editNameBtn"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="3dp"
                app:layout_constraintTop_toTopOf="@id/tv_side_groupName"
                app:layout_constraintBottom_toBottomOf="@id/tv_side_groupName"
                app:layout_constraintStart_toEndOf="@id/tv_side_groupName"
                android:src="@drawable/btn_edit"/>

            <ImageView
                android:id="@+id/iv_sideUserIcon"
                android:layout_width="12dp"
                android:layout_height="12dp"
                app:layout_constraintTop_toBottomOf="@id/tv_side_groupName"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="18dp"
                android:src="@drawable/user"/>

            <TextView
                android:id="@+id/tv_sidePeopleCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_side_groupName"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="34dp"
                android:fontFamily="@font/pretendard_medium"
                android:textSize="12sp"
                android:textColor="@color/gray500"
                android:text="n명"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cv_inviteCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/iv_sideUserIcon"
                android:layout_marginTop="22dp"
                android:background="@color/mainsub2">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginVertical="13dp"
                    android:layout_marginLeft="18dp">

                    <ImageView
                        android:id="@+id/iv_ticket"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:src="@drawable/iv_ticket"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/iv_ticket"
                        android:layout_marginLeft="6dp"
                        android:fontFamily="@font/pretendard_medium"
                        android:textSize="16sp"
                        android:textColor="@color/texthigh"
                        android:text="초대 코드 발급"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_titlePromise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_medium"
                android:textSize="14sp"
                android:textColor="@color/purpleMain"
                android:text="약속"
                app:layout_constraintTop_toBottomOf="@id/cv_inviteCode"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="17dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_menuPromise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_titlePromise"
                android:layout_marginTop="15dp"
                android:background="@color/gray100">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cv_oncallPromise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grayWhite"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/cv_settlePromise"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="0.5dp"
                    >
                    <TextView
                        android:id="@+id/tv_oncallPromise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_medium"
                        android:textSize="16sp"
                        android:textColor="@color/gray800"
                        android:text="대기중인 약속"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginVertical="13dp"
                        android:layout_marginLeft="20dp"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cv_settlePromise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grayWhite"
                    app:layout_constraintTop_toBottomOf="@id/cv_oncallPromise"
                    app:layout_constraintBottom_toTopOf="@id/cv_latePromise"
                    android:layout_marginTop="0.5dp"
                    android:layout_marginBottom="0.5dp"
                    >
                    <TextView
                        android:id="@+id/tv_settlePromise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_medium"
                        android:textSize="16sp"
                        android:textColor="@color/gray800"
                        android:text="확정된 약속"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginVertical="13dp"
                        android:layout_marginLeft="20dp"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cv_latePromise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grayWhite"
                    app:layout_constraintTop_toBottomOf="@id/cv_settlePromise"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="0.5dp"
                    android:layout_marginBottom="1dp"
                    >
                    <TextView
                        android:id="@+id/tv_latePromise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_medium"
                        android:textSize="16sp"
                        android:textColor="@color/gray800"
                        android:text="지난 약속"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginVertical="13dp"
                        android:layout_marginLeft="20dp"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/tv_titleHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_medium"
                android:textSize="14sp"
                android:textColor="@color/purpleMain"
                android:text="히스토리"
                app:layout_constraintTop_toBottomOf="@id/cl_menuPromise"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="49dp"
                android:layout_marginLeft="17dp"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_historyset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_titleHistory"
                android:layout_marginTop="15dp"
                android:background="@color/gray100">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_historymenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grayWhite"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    >
                    <TextView
                        android:id="@+id/tv_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_medium"
                        android:textSize="16sp"
                        android:textColor="@color/gray800"
                        android:text="히스토리"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginVertical="13dp"
                        android:layout_marginLeft="20dp"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_closeset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cl_historyset"
                android:layout_marginTop="174dp"
                android:background="@color/gray100">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_close"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grayWhite"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="1dp"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginTop="19dp"
                        android:layout_marginBottom="58dp"
                        android:layout_marginLeft="29dp"
                        android:layout_marginRight="30dp">

                        <ImageView
                            android:id="@+id/iv_deleteGroup"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:src="@drawable/iv_redtrash"/>

                        <TextView
                            android:id="@+id/tv_deleteGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintLeft_toRightOf="@id/iv_deleteGroup"
                            app:layout_constraintRight_toLeftOf="@id/cl_closeBorder"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginRight="30dp"
                            android:fontFamily="@font/pretendard_medium"
                            android:textSize="14sp"
                            android:textColor="@color/error"
                            android:text="모임 삭제"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_closeBorder"
                            android:layout_width="1dp"
                            android:layout_height="18dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/tv_deleteGroup"
                            app:layout_constraintRight_toLeftOf="@id/iv_outGroup"
                            android:background="@color/gray100" />


                        <ImageView
                            android:id="@+id/iv_outGroup"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/cl_closeBorder"
                            android:layout_marginLeft="30dp"
                            android:src="@drawable/iv_groupout"/>

                        <TextView
                            android:id="@+id/tv_outGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintLeft_toRightOf="@id/iv_outGroup"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:fontFamily="@font/pretendard_medium"
                            android:textSize="14sp"
                            android:textColor="@color/gray800"
                            android:text="모임 나가기"/>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>