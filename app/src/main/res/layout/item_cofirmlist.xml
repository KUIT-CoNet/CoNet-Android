<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/plan_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="1dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_bold"
                android:paddingVertical="1dp"
                android:text="2023. 04. 30"
                android:textColor="@color/texthigh"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/pretendard_bold"
                android:paddingVertical="1dp"
                android:text="14:00"
                android:textColor="@color/texthigh"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="26dp"
            android:layout_marginHorizontal="20dp"
            android:background="@color/iconDisabled" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_remaindate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_medium"
                android:paddingVertical="2dp"
                android:text="n일 남았습니다."
                android:textColor="@color/textMedium"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_promisename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:breakStrategy="simple"
                android:ellipsize="end"
                android:fontFamily="@font/pretendard_medium"
                android:lineHeight="24dp"
                android:maxLines="2"
                android:paddingVertical="2dp"
                android:text="제목은 최대 두 줄, 더 길어지면 말 줄임표를 사용 제목은 최대 두 줄, 더 길어지면 말 줄임표를 사용"
                android:textColor="@color/gray800"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>