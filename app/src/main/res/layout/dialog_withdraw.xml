<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#4D000000">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22sp"
                android:text="탈퇴하시겠습니까?"
                android:fontFamily="@font/pretendard_bold"
                android:textSize="18sp"
                android:textColor="@color/gray800"
                android:layout_marginTop="36dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/withdraw_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="계정 내 참여한 모임, 약속이 모두 삭제되며 복구되지 않습니다."
                android:fontFamily="@font/pretendard"
                android:textSize="14sp"
                android:textColor="@color/gray800"
                android:textAlignment="center"
                android:layout_marginTop="70dp"
                android:layout_marginHorizontal="60dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <View
                android:id="@+id/withdraw_v"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray100"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/withdraw_tv"/>

            <TextView
                android:id="@+id/withdraw_cancel"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:text="취소"
                android:fontFamily="@font/pretendard"
                android:textSize="16sp"
                android:textColor="@color/gray500"
                android:paddingVertical="18dp"
                android:textAlignment="center"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintTop_toBottomOf="@id/withdraw_v"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/withdraw_done"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:text="탈퇴"
                android:fontFamily="@font/pretendard"
                android:textSize="16sp"
                android:textColor="@color/purpleMain"
                android:paddingVertical="18dp"
                android:textAlignment="center"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintTop_toBottomOf="@id/withdraw_v"
                app:layout_constraintEnd_toEndOf="parent"/>

            <View
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:background="@color/gray100"
                app:layout_constraintTop_toBottomOf="@id/withdraw_v"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
