<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--check-->
    <ImageView
        android:id="@+id/check_btn_back_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/chevron_left"
        android:layout_marginStart="17dp"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/check_title"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:text="문의하기"
        android:textSize="18sp"
        android:fontFamily="@font/pretendard_bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/check_btn_back_iv"
        app:layout_constraintBottom_toBottomOf="@id/check_btn_back_iv"/>

    <TextView
        android:id="@+id/check_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:text="무엇을 도와드릴까요?"
        android:textSize="20sp"
        android:fontFamily="@font/pretendard_bold"
        android:textColor="@color/gray800"
        android:layout_marginStart="24dp"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@id/check_title"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/check_text1_tv"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text="이용 중 불편한 점이나 문의사항을 보내주세요."
        android:textSize="14sp"
        android:fontFamily="@font/pretendard"
        android:textColor="@color/gray500"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/check_subtitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/check_text2_tv"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text="평일 (월-금) 10:00 - 17:00, 주말/공휴일 휴무"
        android:textSize="14sp"
        android:fontFamily="@font/pretendard"
        android:textColor="@color/gray500"
        android:layout_marginStart="24dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/check_text1_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/check_text3_tv"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text="conet.official23@gmail.com"
        android:textSize="14sp"
        android:fontFamily="@font/pretendard"
        android:textColor="@color/gray500"
        android:layout_marginStart="24dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/check_text2_tv"
        app:layout_constraintStart_toStartOf="parent"/>
    
    <View
        android:id="@+id/check_email_btn"
        android:layout_width="137dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/view_btn_purple"
        app:layout_constraintTop_toBottomOf="@id/check_text3_tv"
        app:layout_constraintStart_toStartOf="parent"/>
    
    <ImageView
        android:id="@+id/check_email_iv"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/mail"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="@id/check_email_btn"
        app:layout_constraintTop_toTopOf="@id/check_email_btn"
        app:layout_constraintBottom_toBottomOf="@id/check_email_btn"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text="이메일 보내기"
        android:fontFamily="@font/pretendard_medium"
        android:textSize="14sp"
        android:layout_marginStart="6dp"
        android:textColor="@color/gray800"
        app:layout_constraintStart_toEndOf="@id/check_email_iv"
        app:layout_constraintTop_toTopOf="@id/check_email_btn"
        app:layout_constraintBottom_toBottomOf="@id/check_email_btn"/>

    <View
        android:id="@+id/check_view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="24dp"
        android:background="@color/gray200"
        android:layout_marginTop="61dp"
        app:layout_constraintTop_toBottomOf="@id/check_email_btn"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text="등록된 문의사항이 없습니다."
        android:textSize="14sp"
        android:fontFamily="@font/pretendard"
        android:textColor="@color/gray500"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/check_view"
        app:layout_constraintStart_toStartOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>