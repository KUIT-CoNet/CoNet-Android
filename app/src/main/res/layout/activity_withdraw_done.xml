<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--w_done-->
    <ImageView
        android:id="@+id/w_done_check_iv"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:src="@drawable/btn_check_round_purple"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/w_done_tv1"/>

    <TextView
        android:id="@+id/w_done_tv1"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="회원탈퇴가 완료되었습니다."
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/w_done_check_iv"
        app:layout_constraintBottom_toBottomOf="@id/w_done_tv2"/>

    <TextView
        android:id="@+id/w_done_tv2"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="그동안 커넷 서비스를 이용해주셔서 감사합니다."
        android:textSize="16sp"
        android:layout_marginTop="1dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/w_done_tv1"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <!--완료 버튼-->
    <androidx.cardview.widget.CardView
        android:id="@+id/done_btn_cv"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="46dp"
        app:cardBackgroundColor="@color/purpleMain"
        app:cardCornerRadius="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="확인"
                android:fontFamily="@font/pretendard"
                android:textColor="@color/grayWhite"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>