<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/item_history_cl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:layout_marginTop="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/tv_history_date"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:text="2023.07.17"
        android:fontFamily="@font/pretendard_medium"
        android:textSize="12sp"
        android:textColor="@color/texthigh"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_history_name"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:text="약속명"
        android:textSize="18sp"
        android:fontFamily="@font/pretendard_bold"
        android:textColor="@color/texthigh"
        android:layout_marginTop="4dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_history_date"/>

    <ImageView
        android:id="@+id/iv_history_user"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/icon_people"
        app:layout_constraintBottom_toBottomOf="@id/tv_history_num"
        app:layout_constraintEnd_toStartOf="@id/tv_history_num"
        app:layout_constraintTop_toTopOf="@id/tv_history_num"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_history_num"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:text="3명"
        android:textSize="12sp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toTopOf="@id/tv_history_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_history_name"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_history_image"
        android:layout_width="match_parent"
        android:layout_height="345dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_history_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="3dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/iv_history_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/rectangle"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_history_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="내용을 입력하세요. 내용을 입력하세요. 내용을 입력하세요. 내용을 입력하세요. 내용을 입력하세요. 내용을 입력하세요. 내용을 입력하세요. 내용을 입력하세요. 내용을 입력하세요."
        android:fontFamily="@font/pretendard"
        android:textColor="@color/texthigh"
        android:textSize="14sp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/cv_history_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>