<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/fl_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/info_btn_back_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/chevron_left"
                android:layout_marginStart="17dp"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/info_text1"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="회원정보"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_bold"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/info_btn_back_iv"
                app:layout_constraintBottom_toBottomOf="@id/info_btn_back_iv"/>

            <ImageView
                android:id="@+id/info_photo_iv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/icon_profile_gray"
                android:layout_marginTop="56dp"
                app:layout_constraintTop_toBottomOf="@id/info_text1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/info_camera_iv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/btn_camera"
                app:layout_constraintEnd_toEndOf="@id/info_photo_iv"
                app:layout_constraintBottom_toBottomOf="@id/info_photo_iv"/>

            <!--이름-->
            <TextView
                android:id="@+id/info_text1_tv"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:text="이름"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard"
                android:layout_marginTop="30dp"
                android:layout_marginStart="24dp"
                app:layout_constraintTop_toBottomOf="@id/info_photo_iv"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/my_info_cv"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="6dp"
                app:cardElevation="0dp"
                android:background="@null"
                app:layout_constraintTop_toBottomOf="@id/info_text1_tv">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null">

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="애플카카오"
                        android:textColor="@color/gray800"
                        android:textSize="18sp"
                        android:fontFamily="@font/pretendard"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/chevron_right"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/info_line1_v"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray100"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="24dp"
                app:layout_constraintTop_toBottomOf="@id/my_info_cv"
                app:layout_constraintStart_toStartOf="parent"/>

            <!--연결계정-->
            <TextView
                android:id="@+id/info_text2_tv"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:text="연결된 계정"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard"
                android:layout_marginTop="16dp"
                android:layout_marginStart="24dp"
                app:layout_constraintTop_toBottomOf="@id/info_line1_v"
                app:layout_constraintStart_toStartOf="parent"/>


            <TextView
                android:id="@+id/info_account_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="conet@gmail.com"
                android:textColor="@color/gray800"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="6dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/info_text2_tv"/>


            <ImageView
                android:id="@+id/info_kakao_iv"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/btn_kakao_logo"
                app:layout_constraintTop_toTopOf="@id/info_text2_tv"
                app:layout_constraintBottom_toBottomOf="@id/info_account_tv"
                app:layout_constraintEnd_toEndOf="@id/info_account_tv"/>

            <!--하이퍼링크 구현!!-->
            <!--회원탈퇴-->
            <TextView
                android:id="@+id/info_withdraw_tv"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:text="회원탈퇴"
                android:textSize="14sp"
                android:textColor="@color/gray500"
                android:layout_marginBottom="56dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>