<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_oncalllist"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="24dp"
    android:layout_marginVertical="5dp"
    android:background="@drawable/layout_todolist"
    android:elevation="8dp"
    android:orientation="horizontal"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_promise_startdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_bold"
            android:maxLines="1"
            android:text="2024. 00. 00"
            android:textColor="@color/gray800"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:fontFamily="@font/pretendard_bold"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/gray800"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_promise_enddate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_bold"
            android:maxLines="1"
            android:text="2024. 00. 00"
            android:textColor="@color/gray800"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="26dp"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="20dp"
        android:background="@color/iconDisabled" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingVertical="3dp">

        <TextView
            android:id="@+id/tv_promisscontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:breakStrategy="simple"
            android:ellipsize="end"
            android:fontFamily="@font/pretendard_medium"
            android:maxWidth="183dp"
            android:maxLines="1"
            android:text="ios 스터디"
            android:textColor="@color/texthigh"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_promisscategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:fontFamily="@font/pretendard_medium"
            android:maxLines="1"
            android:text="ios 스터디"
            android:textColor="@color/textMedium"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>